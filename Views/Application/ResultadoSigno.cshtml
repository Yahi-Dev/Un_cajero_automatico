@{
    ViewData["Title"] = "Resultado Signo";
}



<form method="post" asp-action="IndexSigno" asp-controller="Application">
    <main class="container-fluid mt-5">
        <div class="row">
            <div class="col-12 col-sm-6 offset-sm3 col-md-4 offset-md-4">
                <div class="card">
                    <div class="card-header bg-dark text-light">
                        <h5 class="text-center">Signo Zodiacal</h5>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-center fa-">Su Signo Zodiacal es: </h5>
                        <div class="card mx-auto" style="width: 18rem; margin-top: 40px">
                            <h6 class="text-center">@ViewBag.Signo</h6>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </main>
</form>


