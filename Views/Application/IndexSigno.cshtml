@{
    ViewData["Title"] = "IndexSigno";
}

<form method="post" asp-action="IndexSigno" asp-controller="Application">
    <main class="container-fluid mt-5">
        <div class="row">
            <div class="col-12 col-sm-6 offset-sm3 col-md-4 offset-md-4">
                <div class="card">
                    <div class="card-header bg-dark text-light">
                        <h5 class="text-center">Elija su signo Zodiacal</h5>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-center fa-">Seleccione el Mes y el Dia de su fecha de nacimiento</h5>
                        <div class="mb-3" style="margin-top: 40px">
                            <label class="form-label" for="mes" id="mes">Elija su mes</label>
                            <select class="form-select" name="mes">
                                <option value=1>Enero</option>
                                <option value=2>Febrero</option>
                                <option value=3>Marzo</option>
                                <option value=4>Abril</option>
                                <option value=5>Mayo</option>
                                <option value=6>Junio</option>
                                <option value=7>Julio</option>
                                <option value=8>Agosto</option>
                                <option value=9>Septiembre</option>
                                <option value=10>Octubre</option>
                                <option value=11>Noviembre</option>
                                <option value=12>Diciembre</option>
                            </select>
                        </div>
                        <div class="mb-3" style="margin-top: 20px">
                            <label class="form-label" for="dia" id="dia" name="dia">Selecciona el dia:</label>
                            <input type="number" id="dia" name="dia" min="1" max="30"/>
                        </div>

                        <button type="submit" class="btn btn-outline-primary float-end">Analizar</button>
                    </div>
                </div>
            </div>
        </div>
    </main>
</form>

